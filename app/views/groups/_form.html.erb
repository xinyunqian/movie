<%= form_for @group do |f| %>

<div class="form-group">
    <div class="form-group string optional">
        <%= f.label "电影名称", :class => "string optional control-label" %>
        <%= f.text_field :电影名称, :class => "string optional form-control" %>
    </div>

    <div class="form-group string optional">
        <%= f.label "电影类型", :class => "string optional control-label" %>
        <%= f.text_area :电影类型, :class => "string optional form-control" %>
    </div>

    <div class="form-group string optional">
        <%= f.label "上映年份", :class => "string optional control-label" %>
        <%= f.text_area :上映年份, :class => "string optional form-control" %>
    </div>

</div>
<%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "提交中..." } %>
<% end %>
