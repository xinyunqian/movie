<div class="col-md-12">
  <div class="group">
    <%= link_to("创建新影片", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>电影名称</td>
        <td>电影类型</td>
        <td>上映年份</td>
        <td>创建人</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to(group.电影名称, group_path(group)) %></td>
          <td><%= group.电影类型 %></td>
          <td><%= group.上映年份 %></td>
          <td> <%= group.user.email %> </td>
          <td>
              <%= link_to("编辑信息", edit_group_path(group), class: "btn btn-sm btn-default")%>
              <%= link_to("删除", group_path(group),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "一旦删除将无法找回，确认要删除吗?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
