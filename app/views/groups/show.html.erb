<div class="col-md-12">
  <div class="group">

    <%= link_to("发表评论", new_group_post_path(@group), class: "btn btn-primary pull-right")%>

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="label label-success"> 已看过该影片 </label>
          <%= link_to("取消看过", quit_group_path(@group), method: :post, class: "btn btn-default") %>
      <% else %>
        <label class="label label-warning"> 未看过该影片 </label>
          <%= link_to("看过本片", join_group_path(@group), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>

    <%= link_to("编辑该影片", edit_group_path(@group), class: "btn btn-sm btn-default pull-right")%>
  </div>
  <h2><%= @group.电影名称 %></h2>
  <p><%= @group.电影类型 %></p>
  <p><%= @group.上映年份 %></p>

   <table class="table">
    <thead>
     <tr>
        <th>评论内容</th>
        <th>发表者</th>
        <th>发表时间</th>
     </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
      <%= will_paginate @posts %>
  </div>

</div>
